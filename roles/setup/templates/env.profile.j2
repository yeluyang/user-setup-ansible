function proxy() {
	# setup your proxy endpoint manually in this file, like:
	# 
	#   export PROXY_SOCKS_ENDPOINT=127.0.0.1:1080
	#   export PROXY_HTTP_ENDPOINT=127.0.0.1:1081
	#
	# after setup these var, call `proxy` in terminal can start proxy
	export all_proxy=socks5://${PROXY_SOCKS_ENDPOINT};
	export ALL_PROXY=socks5://${PROXY_SOCKS_ENDPOINT};
	export http_proxy=http://${PROXY_HTTP_ENDPOINT};
	export HTTP_PROXY=http://${PROXY_HTTP_ENDPOINT};
	export https_proxy=http://${PROXY_HTTP_ENDPOINT};
	export HTTPS_PROXY=http://${PROXY_HTTP_ENDPOINT};
}

function unproxy() {
	unset all_proxy;
	unset ALL_PROXY;
	unset http_proxy;
	unset HTTP_PROXY;
	unset https_proxy;
	unset HTTPS_PROXY;
}

